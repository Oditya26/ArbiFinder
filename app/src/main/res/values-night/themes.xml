<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Arbitrade" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your AppCompat theme here -->
        <item name="colorPrimary">@color/mercury</item>
        <item name="colorOnPrimary">@color/mercury</item>
        <item name="colorSecondary">@color/mercury</item>
        <item name="colorOnSecondary">@color/mercury</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item> <!-- Sesuaikan ukuran -->
    </style>

    <!-- Title Style (Montserrat Medium) -->
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item> <!-- Sesuaikan ukuran -->
    </style>

    <!-- Description Bold (Montserrat Semibold) -->
    <style name="DescriptionBoldTextStyle">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">14sp</item> <!-- Sesuaikan ukuran -->
    </style>

    <!-- Description Regular (Montserrat Regular) -->
    <style name="DescriptionRegularTextStyle">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">14sp</item> <!-- Sesuaikan ukuran -->
    </style>
</resources>