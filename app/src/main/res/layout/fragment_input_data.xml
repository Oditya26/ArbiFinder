<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputDataFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_jungle_green"
    tools:context=".InputDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corners"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ai_icon" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/date"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/datePicker"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/mercury"
                    android:textColorHint="@color/mercury"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Select Date"
                    android:textColor="@color/mercury" />

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/symbol"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/symbol"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/mercury"
                    android:backgroundTint="@color/mercury"/>


                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/buy_price_in_usdt"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/buyPrice"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/mercury"
                    android:backgroundTint="@color/mercury"/>

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/sell_price_in_usdt"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/sellPrice"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/mercury"
                    android:backgroundTint="@color/mercury"/>

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/amount_in_usdt"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/amount"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/mercury"
                    android:backgroundTint="@color/mercury"/>

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/comment2"
                    android:textColor="@color/mercury" />

                <EditText
                    android:id="@+id/comment"
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/mercury"
                    android:backgroundTint="@color/mercury"/>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/bright_sun"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingTop="12dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="12dp"
                    android:text="@string/submit"
                    android:textColor="@color/dark_jungle_green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>