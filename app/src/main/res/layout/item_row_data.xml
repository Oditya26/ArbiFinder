<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/dark"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="DisableBaselineAlignment">

        <!-- Bagian 1 (Difference) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            tools:ignore="RtlSymmetry">

            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvDifference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="3dp"
                android:text="@string/persen"
                android:textColor="@color/mercury"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/yellow_circle" />

            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvDifferenceItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="3dp"
                android:paddingRight="16dp"
                android:paddingBottom="3dp"
                android:text="@string/eth_btc"
                android:textColor="@color/mercury" />
        </LinearLayout>

        <!-- Bagian 2 (Exchange 1) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvBuyFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="4dp"
                android:paddingBottom="3dp"
                android:text="@string/bitfinex"
                android:textColor="@color/mercury"
                android:drawablePadding="4dp"
                app:drawableEndCompat="@drawable/alert_triangle_icon" />

            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvBuyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="3dp"
                android:paddingRight="16dp"
                android:paddingBottom="3dp"
                android:text="@string/buy_from_value"
                android:textColor="@color/mercury" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="12dp"
                    android:text="@string/vol"
                    android:textColor="@color/mercury"/>
                <TextView
                    style="@style/DescriptionRegularTextStyle"
                    android:id="@+id/tvBuyVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="12dp"
                    android:text="@string/vol_sell_at_value"
                    android:textColor="@color/mercury"
                    app:drawableStartCompat="@drawable/icon_bitcoin_mercury_18" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bagian 3 (Exchange 2) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvSellAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="3dp"
                android:text="@string/hitbtc"
                android:textColor="@color/mercury" />
            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvSellValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="3dp"
                android:paddingRight="16dp"
                android:paddingBottom="3dp"
                android:text="@string/sell_at_value"
                android:textColor="@color/mercury" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/DescriptionRegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="12dp"
                    android:text="@string/vol"
                    android:textColor="@color/bright_sun"/>
                <TextView
                    style="@style/DescriptionRegularTextStyle"
                    android:id="@+id/tvSellVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="12dp"
                    android:text="@string/vol_sell_at_value"
                    android:textColor="@color/bright_sun"
                    app:drawableStartCompat="@drawable/icon_bitcoin_sun_bright_18" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
